{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    }
  ],
  "include": [
    "./build/types/**/*.ts",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "custom.d.ts",
    "./out/types/**/*.ts",
    "app/**/*",
    "store/**/*",
    "components/**/*",
    "public/**/*",
    "hooks"
  ],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "composite": true,
    "target": "esnext",
    "lib": ["ES2023", "dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["/*"],
      "@app/*": ["app/*"],
      "@public/*": ["public/*"],
      "@components/*": ["components/*"],
      "@store/*": ["store/*"],
      "@hooks/*": ["hooks/*"]
    },
    "noEmit": false
  },
  "exclude": ["node_modules", "dist"]
}
